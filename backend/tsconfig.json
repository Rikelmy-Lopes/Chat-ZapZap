{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "./build/src",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "/",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests"
  ]
}